{
  "name": "joibuilder",
  "version": "1.0.0",
  "description": "Node.js module to parse a yaml input file into a joi schema",
  "main": "lib/index.js",
  "scripts": {
    "docs": "./node_modules/.bin/esdoc -c esdoc.json",
    "test": "xo && make test-once"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pomeo/joibuilder.git"
  },
  "keywords": [
    "joi"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib"
  ],
  "author": "Sergey Ovechkin <me@pomeo.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pomeo/joibuilder/issues"
  },
  "homepage": "https://github.com/pomeo/joibuilder#readme",
  "dependencies": {
    "joi": "^9.0.4",
    "yamljs": "^0.2.8"
  },
  "devDependencies": {
    "esdoc": "^0.4.8",
    "mocha": "^3.0.2",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "space-before-function-paren": 0,
      "curly": 0,
      "no-multi-spaces": 0,
      "no-prototype-builtins": 1,
      "max-depth": 1,
      "babel/arrow-parens": 0,
      "camelcase": 1
    },
    "envs": [
      "node",
      "mocha"
    ]
  }
}
